<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro2"
    android:background="@color/black"
    android:layout_gravity="center"
    android:orientation= "vertical" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/primary_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/idTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textColor="#1DB954"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text= "Ingresar contraseña"
        android:textSize="20sp"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/idContra"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:hint="Contraseña"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:text= "Repetir contraseña"
        android:textSize="20sp"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/idContra2"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:hint="Repetir contraseña"
        android:textColorHint="@color/white"
        android:textSize="18sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/idSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recordar sesión"
        android:textSize="18sp"
        app:thumbTint="@color/spotify_green"
        android:textColor="@color/spotify_green"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1DB954"
        android:text="Registrarme"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />




</LinearLayout>